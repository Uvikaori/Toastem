<div class="row mb-4">
  <div class="col-12">
    <div class="card shadow-sm">
      <div class="card-body">
        <h2 class="card-title">Bienvenido, <%= usuario.nombre %></h2>
        <h4 class="card-text">Finca: <%= fincaSeleccionada.nombre %></h4>
        <p class="card-text">Ubicación: <%= fincaSeleccionada.ubicacion %></p>
      </div>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-4 mb-3 mb-md-0">
    <div class="card bg-primary text-white shadow-sm h-100">
      <div class="card-body">
        <h5 class="card-title">Lotes activos</h5>
        <p class="display-4 mb-0"><%= lotesActivos %></p>
      </div>
      <div class="card-footer bg-transparent border-0">
        <a href="/fincas/<%= fincaSeleccionada.id %>/lotes" class="text-white text-decoration-none">Ver todos <i class="fas fa-arrow-right ms-1"></i></a>
      </div>
    </div>
  </div>
  <div class="col-md-4 mb-3 mb-md-0">
    <div class="card bg-success text-white shadow-sm h-100">
      <div class="card-body">
        <h5 class="card-title">En secado</h5>
        <p class="display-4 mb-0"><%= lotesEnSecado %></p>
      </div>
      <div class="card-footer bg-transparent border-0">
        <a href="/fincas/<%= fincaSeleccionada.id %>/lotes" class="text-white text-decoration-none">Ver todos <i class="fas fa-arrow-right ms-1"></i></a>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card bg-info text-white shadow-sm h-100">
      <div class="card-body">
        <h5 class="card-title">Precio actual del café</h5>
        <p class="display-4 mb-0">$<%= precioCafe %></p>
      </div>
      <div class="card-footer bg-transparent border-0">
        <small>Actualizado: <%= fechaActualizacion %></small>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="card shadow-sm">
      <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Últimos lotes</h5>
        <a href="/fincas/<%= fincaSeleccionada.id %>/lotes/agregar" class="btn btn-primary btn-sm">
          <i class="fas fa-plus me-1"></i> Nuevo lote
        </a>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead class="table-light">
              <tr>
                <th>Código</th>
                <th>Fecha</th>
                <th>Tipo</th>
                <th>Peso</th>
                <th>Estado</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% if (lotes && lotes.length > 0) { %>
                <% lotes.forEach(lote => { %>
                  <% if (lote) { %>
                    <tr>
                      <td><%= lote.codigo %></td>
                      <td><%= lote.fecha_recoleccion %></td>
                      <td><%= lote.tipo_cafe %></td>
                      <td><%= lote.peso_inicial %> kg</td>
                      <td><%= lote.estado %></td>
                      <td>
                        <a href="#" class="btn btn-sm btn-secondary">Detalles</a>
                      </td>
                    </tr>
                  <% } %>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="6" class="text-center py-4">
                    <i class="fas fa-coffee text-muted mb-3 fa-3x"></i>
                    <p class="mb-0 text-muted">No hay lotes registrados todavía</p>
                    <a href="/fincas/<%= fincaSeleccionada.id %>/lotes/agregar" class="btn btn-primary mt-3">
                      <i class="fas fa-plus me-1"></i> Registrar mi primer lote
                    </a>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>