<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0"><%= titulo %></h2>
                </div>
                <div class="card-body">
                    <% if (error && error.length > 0) { %>
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                <% error.forEach(function(err) { %>
                                    <li><%= err %></li>
                                <% }); %>
                            </ul>
                        </div>
                    <% } %>

                    <form action="/fincas/<%= finca.id %>/lotes/<%= lote.id %>/empacado" method="POST">
                        <div class="mb-3">
                            <label for="fecha_empacado" class="form-label">Fecha de Empacado</label>
                            <input type="date" class="form-control" id="fecha_empacado" name="fecha_empacado" value="<%= fecha_empacado %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="tipo_empaque" class="form-label">Tipo de Empaque</label>
                            <select class="form-select" id="tipo_empaque" name="tipo_empaque" required>
                                <option value="">Seleccione un tipo</option>
                                <option value="Bolsa" <%= tipo_empaque === 'Bolsa' ? 'selected' : '' %>>Bolsa</option>
                                <option value="Lata" <%= tipo_empaque === 'Lata' ? 'selected' : '' %>>Lata</option>
                                <option value="Tarro" <%= tipo_empaque === 'Tarro' ? 'selected' : '' %>>Tarro</option>
                                <option value="Otro" <%= tipo_empaque === 'Otro' ? 'selected' : '' %>>Otro</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="peso_inicial_empacado" class="form-label">Peso Inicial (kg)</label>
                            <input type="number" step="0.01" class="form-control" id="peso_inicial_empacado" name="peso_inicial_empacado" value="<%= peso_inicial_empacado %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="unidades_empacadas" class="form-label">Unidades Empacadas</label>
                            <input type="number" class="form-control" id="unidades_empacadas" name="unidades_empacadas" value="<%= unidades_empacadas %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="peso_por_unidad" class="form-label">Peso por Unidad (kg)</label>
                            <input type="number" step="0.01" class="form-control" id="peso_por_unidad" name="peso_por_unidad" value="<%= peso_por_unidad %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="observaciones" class="form-label">Observaciones</label>
                            <textarea class="form-control" id="observaciones" name="observaciones" rows="3"><%= observaciones %></textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Registrar Empacado</button>
                            <a href="/fincas/<%= finca.id %>/lotes/<%= lote.id %>/procesos" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 