<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/fincas/gestionar">Mis Fincas</a></li>
            <li class="breadcrumb-item"><a href="/fincas/<%= finca.id %>/lotes">Lotes de: <%= finca.nombre %></a></li>
            <li class="breadcrumb-item"><a href="/fincas/<%= finca.id %>/lotes/<%= lote.id %>/procesos">Procesos Lote: <%= lote.codigo %></a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= titulo %></li>
        </ol>
    </nav>

    <h1 class="text-toastem-primary mb-4"><%= titulo %></h1>

    <%# Mostrar mensajes flash %>
    <% if (mensaje && mensaje.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert"><%= mensaje %><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>
    <% } %>
    <% if (error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error:</strong>
            <ul><% error.forEach(function(err){ %><li><%= Array.isArray(err) ? err.join(', ') : err %></li><% }) %></ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <div class="card shadow-sm">
        <div class="card-body">
            <p class="mb-3"><strong>Peso del lote después del Secado (Peso inicial para clasificación):</strong> <%= peso_secado_final %> kg</p>
            <hr/>
            <form action="/fincas/<%= finca.id %>/lotes/<%= lote.id %>/clasificacion" method="POST">
                
                <div class="mb-3">
                    <label for="fecha_clasificacion" class="form-label">Fecha y Hora de Clasificación:</label>
                    <input type="datetime-local" class="form-control" id="fecha_clasificacion" name="fecha_clasificacion" value="<%= fecha_clasificacion %>" required>
                </div>

                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="proveedor_externo" name="proveedor_externo" value="true" <%= proveedor_externo ? 'checked' : '' %> onchange="toggleProveedorFields()">
                    <label class="form-check-label" for="proveedor_externo">¿Servicio realizado por proveedor externo?</label>
                </div>

                <div id="campos_proveedor_externo" style="display: <%= proveedor_externo ? 'block' : 'none' %>;">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="nombre_proveedor" class="form-label">Nombre del Proveedor:</label>
                            <input type="text" class="form-control" id="nombre_proveedor" name="nombre_proveedor" value="<%= nombre_proveedor %>" placeholder="Nombre de la empresa o persona">
                        </div>
                        <div class="col-md-6">
                            <label for="costo_servicio" class="form-label">Costo del Servicio (Opcional):</label>
                            <input type="number" step="0.01" class="form-control" id="costo_servicio" name="costo_servicio" value="<%= costo_servicio %>" placeholder="Ej: 50000">
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="peso_final_clasificado" class="form-label">Peso Final Clasificado (kg):</label>
                    <input type="number" step="0.01" class="form-control" id="peso_final_clasificado" name="peso_final_clasificado" value="<%= peso_final_clasificado %>" placeholder="Ej: 22.80" required>
                    <small class="form-text text-muted">Peso del café después del proceso de clasificación.</small>
                </div>

                <div class="mb-3">
                    <label for="observaciones_clasificacion" class="form-label">Observaciones:</label>
                    <textarea class="form-control" id="observaciones_clasificacion" name="observaciones_clasificacion" rows="3" placeholder="Anotaciones sobre el proceso de clasificación"><%= observaciones_clasificacion %></textarea>
                </div>
                
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a href="/fincas/<%= finca.id %>/lotes/<%= lote.id %>/procesos" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Registrar Clasificación</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function toggleProveedorFields() {
    const checkbox = document.getElementById('proveedor_externo');
    const camposProveedor = document.getElementById('campos_proveedor_externo');
    const nombreProveedorInput = document.getElementById('nombre_proveedor');
    if (checkbox.checked) {
        camposProveedor.style.display = 'block';
        nombreProveedorInput.required = true;
    } else {
        camposProveedor.style.display = 'none';
        nombreProveedorInput.required = false;
        // Opcional: Limpiar campos si se desmarca
        // nombreProveedorInput.value = '';
        // document.getElementById('costo_servicio').value = ''; 
    }
}
// Llamar al inicio por si el checkbox ya está marcado (ej. al repoblar por error)
document.addEventListener('DOMContentLoaded', toggleProveedorFields);
</script>

<style>
    .text-toastem-primary {
        color: #5D4037; /* Color principal de Toastem */
    }
</style> 