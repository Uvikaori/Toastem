<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/fincas/gestionar">Mis Fincas</a></li>
            <li class="breadcrumb-item"><a href="/fincas/<%= finca.id %>/lotes">Lotes de: <%= finca.nombre %></a></li>
            <li class="breadcrumb-item"><a href="/fincas/<%= finca.id %>/lotes/<%= lote.id %>/procesos">Procesos Lote: <%= lote.codigo %></a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= titulo %></li>
        </ol>
    </nav>

    <h1 class="text-toastem-primary mb-4"><%= titulo %></h1>

    <%# Mostrar mensajes flash %>
    <% if (mensaje && mensaje.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert"><%= mensaje %><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>
    <% } %>
    <% if (error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error:</strong>
            <ul><% error.forEach(function(err){ %><li><%= Array.isArray(err) ? err.join(', ') : err %></li><% }) %></ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <div class="card shadow-sm">
        <div class="card-body">
            <p class="mb-3"><strong>Peso del lote después del Secado (Peso inicial para clasificación):</strong> <%= peso_secado_final || 0 %> kg</p>
            <hr/>
            <form action="/fincas/<%= finca.id %>/lotes/<%= lote.id %>/clasificacion" method="POST">
                <!-- Campo oculto para enviar el peso inicial -->
                <input type="hidden" name="peso_inicial" value="<%= peso_secado_final || 0 %>">
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="fecha_clasificacion" class="form-label">Fecha de Clasificación: <span class="text-danger">*</span></label>
                        <input type="date" class="form-control" id="fecha_clasificacion" name="fecha_clasificacion" value="<%= fecha_clasificacion || '' %>" required>
                        <small class="form-text text-muted">Campo obligatorio. Fecha en que se realiza la clasificación.</small>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="peso_total" class="form-label">Peso Total (kg):</label>
                        <input type="number" step="0.01" min="0" class="form-control" id="peso_total" name="peso_total" value="<%= peso_total || '' %>" placeholder="Ej: 100">
                        <small class="form-text text-muted">Peso total del café después de la clasificación.</small>
                    </div>
                    <div class="col-md-6">
                        <label for="peso_pergamino" class="form-label">Peso Pergamino (kg):</label>
                        <input type="number" step="0.01" min="0" class="form-control" id="peso_pergamino" name="peso_pergamino" value="<%= peso_pergamino || '' %>" placeholder="Ej: 5.00">
                        <small class="form-text text-muted">Peso del café en pergamino.</small>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="peso_pasilla" class="form-label">Peso Pasilla (kg):</label>
                        <input type="number" step="0.01" min="0" class="form-control" id="peso_pasilla" name="peso_pasilla" value="<%= peso_pasilla || '' %>" placeholder="Ej: 2.00">
                        <small class="form-text text-muted">Peso del café pasilla.</small>
                    </div>
                    <div class="col-md-6">
                        <label for="peso_otro" class="form-label">Peso Otro (kg):</label>
                        <input type="number" step="0.01" min="0" class="form-control" id="peso_otro" name="peso_otro" value="<%= peso_otro || '' %>" placeholder="Ej: 1.00">
                        <small class="form-text text-muted">Peso de otros tipos de café o subproductos.</small>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="peso_cafe_bueno" class="form-label">Peso Café Bueno (kg): <span class="text-danger">*</span></label>
                    <input type="number" step="0.01" min="0" class="form-control" id="peso_cafe_bueno" name="peso_cafe_bueno" value="<%= peso_cafe_bueno || '' %>" placeholder="Ej: 90.00" required>
                    <small class="form-text text-muted">Campo obligatorio. Peso del café de buena calidad.</small>
                </div>

                <div class="mb-3">
                    <label for="observaciones" class="form-label">Observaciones:</label>
                    <textarea class="form-control" id="observaciones" name="observaciones" rows="3" placeholder="Anotaciones sobre el proceso de clasificación"><%= observaciones || '' %></textarea>
                </div>
                
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a href="/fincas/<%= finca.id %>/lotes/<%= lote.id %>/procesos" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Registrar Clasificación</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .text-toastem-primary {
        color: #5D4037; /* Color principal de Toastem */
    }
</style> 