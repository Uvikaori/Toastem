<%- include('partials/header') %>

<div class="row justify-content-center mt-5">
  <div class="col-md-8 text-center">
    <div class="card shadow">
      <div class="card-body p-5">
        <i class="fas fa-exclamation-triangle text-warning display-1 mb-4"></i>
        <h2 class="mb-4">Ha ocurrido un error</h2>
        <p class="lead mb-4"><%= mensaje || 'Lo sentimos, ha ocurrido un error inesperado.' %></p>
        <% if (typeof error !== 'undefined' && process.env.NODE_ENV === 'development') { %>
          <div class="alert alert-danger text-start">
            <pre><%= error.stack %></pre>
          </div>
        <% } %>
        <a href="/" class="btn btn-primary">Volver al inicio</a>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %> 