<div class="container mt-5">

    <a href="/fincas/crear" class="btn btn-primary btn-sm">
        <i class="fas fa-plus me-1"></i> Nueva Finca
    </a>
    <h1 class="text-center">Gesti贸n de Fincas</h1>
    
    <% if (error) { %>
        <div class="alert alert-danger">
            <%= error %>
        </div>
    <% } %>

    <% if (mensaje) { %>
        <div class="alert alert-success">
            <%= mensaje %>
        </div>
    <% } %>

    <!-- Listado de fincas -->
    <div class="row mt-4">
        <% if (Array.isArray(fincas) && fincas.length > 0) { %>
            <% fincas.filter(finca => finca !== null).forEach(finca => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= finca?.nombre || 'Sin nombre' %></h5>
                            <p class="card-text">
                                <i class="fas fa-map-marker-alt"></i> 
                                <%= finca?.ubicacion || 'Sin ubicaci贸n' %>
                            </p>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="alert alert-info">
                No tienes fincas registradas.
            </div>
        <% } %>
    </div>
</div>

<!-- Modal para agregar/editar finca -->
<%- include('partials/finca-modal') %>

<!-- Scripts para la validaci贸n en tiempo real y gesti贸n de fincas -->
<script src="/js/fincas.js"></script>