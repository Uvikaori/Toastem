<div class="container mt-5">
  <h1 class="text-center">Lotes de la Finca</h1>
  <div class="row mt-4">
    <div class="col-md-6">
      <h3>Agregar Nuevo Lote</h3>
      <form action="/fincas/<%= idFinca %>/lotes/agregar" method="POST">
        <div class="mb-3">
          <label for="codigo" class="form-label">Código del Lote</label>
          <input type="text" class="form-control" id="codigo" name="codigo" required>
        </div>
        <div class="mb-3">
          <label for="fecha_recoleccion" class="form-label">Fecha de Recolección</label>
          <input type="date" class="form-control" id="fecha_recoleccion" name="fecha_recoleccion" required>
        </div>
        <div class="mb-3">
          <label for="peso_inicial" class="form-label">Peso Inicial (kg)</label>
          <input type="number" step="0.01" class="form-control" id="peso_inicial" name="peso_inicial" required>
        </div>
        <div class="mb-3">
          <label for="tipo_cafe" class="form-label">Tipo de Café</label>
          <select class="form-select" id="tipo_cafe" name="tipo_cafe" required>
            <option value="Rojo">Rojo</option>
            <option value="Amarillo">Amarillo</option>
            <option value="Mezcla">Mezcla</option>
          </select>
        </div>
        <div class="mb-3">
          <label for="tipo_recoleccion" class="form-label">Tipo de Recolección</label>
          <select class="form-select" id="tipo_recoleccion" name="tipo_recoleccion" required>
            <option value="Selectiva">Selectiva</option>
            <option value="General">General</option>
          </select>
        </div>
        <div class="mb-3">
          <label for="observaciones" class="form-label">Observaciones</label>
          <textarea class="form-control" id="observaciones" name="observaciones"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Agregar Lote</button>
      </form>
    </div>
    <div class="col-md-6">
      <h3>Mis Lotes</h3>
      <ul class="list-group">
        <!-- Aquí se listarán los lotes de la finca -->
        <% if (lotes && lotes.length > 0) { %>
          <% lotes.forEach(lote => { %>
            <li class="list-group-item">
              <strong>Código:</strong> <%= lote.codigo %> - <strong>Estado:</strong> <%= lote.estado %>
            </li>
          <% }) %>
        <% } else { %>
          <li class="list-group-item">No hay lotes registrados para esta finca.</li>
        <% } %>
      </ul>
    </div>
  </div>
</div>