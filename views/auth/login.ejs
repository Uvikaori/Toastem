<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow">
      <div class="card-body p-5">
        <h2 class="text-center mb-4">Iniciar Sesión</h2>
        
        <%# --- INICIO: Mostrar mensajes flash del servidor --- %>
        <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
            <% error.forEach(function(errText) { %>
                <% if (errText && errText.toString().trim() !== '') { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <%- errText %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
            <% }); %>
        <% } %>
        
        <% if (typeof mensaje !== 'undefined' && mensaje && mensaje.length > 0) { %>
            <% mensaje.forEach(function(msgText) { %>
                <% if (msgText && msgText.toString().trim() !== '') { %>
                     <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        <%- msgText %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
            <% }); %>
        <% } %>
        <%# --- FIN: Mostrar mensajes flash del servidor --- %>
        
        <!-- Mensaje de error general (manejado por login.js, puedes conservarlo si es para errores AJAX) -->
        <div class="alert alert-danger d-none" role="alert" id="errorGeneralClient"> <%# Cambiado ID para evitar colisión %>
          <i class="fas fa-exclamation-circle me-2"></i>
          <span id="errorGeneralClientText"></span>
        </div>

        <!-- Mensaje de registro exitoso (manejado por login.js o desde redirección con flash) -->
        <!-- Si el mensaje de registro exitoso viene como un flash 'mensaje', ya se mostrará arriba -->
        <div class="alert alert-success d-none" role="alert" id="registroExitosoClient"> <%# Cambiado ID %>
          <i class="fas fa-check-circle me-2"></i>
          <span id="registroExitosoClientText">¡Registro exitoso! Ahora puedes iniciar sesión con tus credenciales.</span>
        </div>

        <form id="loginForm" action="/auth/login" method="POST" novalidate>
          <div class="mb-3">
            <label for="correo" class="form-label">Correo Electrónico</label>
            <input type="email" class="form-control" id="correo" name="correo" required>
            <div class="invalid-feedback" id="correoError"></div>
          </div>

          <div class="mb-3">
            <label for="contraseña" class="form-label">Contraseña</label>
            <div class="input-group">
              <input type="password" class="form-control" id="contraseña" name="contraseña" required>
              <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                <i class="fas fa-eye"></i>
              </button>
            </div>
            <div class="invalid-feedback" id="contraseñaError"></div>
          </div>

          <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="remember" name="remember">
            <label class="form-check-label" for="remember">Recordarme</label>
          </div>

          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
            </button>
          </div>
        </form>

        <div class="text-center mt-3">
          <a href="/auth/recuperar-password" class="text-decoration-none">¿Olvidaste tu contraseña?</a>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Script para el formulario de login -->
<!-- El script login.js ya se incluye en main.ejs -->

